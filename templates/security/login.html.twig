{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="card text-center col-12 col-lg-6 m-auto">
            <div class="card-header">
                <h1 class="h3 mb-3 font-weight-normal">Connectez vous !</h1>
            </div>

            <div class="card-body">
            <div class="form-group position-relative">
                <label for="username" class="form-label">Mail</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            </div>

            <div class="form-group position-relative mb-4 ">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control " autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            </div>
            <div class="card-footer container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">

                <div class="checkbox mb-2 mb-md-2 d-flex align-items-center">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                    <label for="_remember_me" class="form-check-label ms-2">Se souvenir de moi</label>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <div class="mb-2">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Se connecter
                        </button>
                    </div>
                    <div>
                        <a href="{{ path('app_forgot_password_request') }}">
                            Mot de passe oubli√© ?
                        </a>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
