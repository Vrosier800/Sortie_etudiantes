{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.mail) }}
        <div>
            <small>
                Entrez votre adresse, et nous vous enverrons
                un lien pour redéfinir votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer l'e-mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
